{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block body %}
    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom_nom</th>
                <th>Email_contact</th>
                <th>Message</th>
                <th>Tel_mobile</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.prenomNom }}</td>
                <td>{{ contact.emailContact }}</td>
                <td>{{ contact.message }}</td>
                <td>{{ contact.telMobile }}</td>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_contacts_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contacts_new') }}">Create new</a>
{% endblock %}
